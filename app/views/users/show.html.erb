<h1><%= @user.username %> show page</h1>

<h3><%= @user.username %>'s tools</h3>
<% @user.tools.each do |tool| %>
  <%= link_to tool.name, user_tool_path(@user.id, tool.id) %>
<% end %>

<% if @user.role = 1 %>
  <%= link_to "Create A New Tool", admin_tools_new_path %>
<% else %>
  <%= link_to "Create A New Tool", new_user_tool_path(@user.id) %>
<% end %>
